# Document Service Environment Configuration
# ============================================

# Service Configuration
GO_ENV=production
SERVICE_NAME=document-service
PORT=3004
LOG_LEVEL=info

# MinIO Object Storage Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET_NAME=documents
MINIO_SSL_ENABLED=true
MINIO_USE_SSL=true

# Azure Services Configuration
AZURE_COMPUTER_VISION_KEY=your-azure-cv-key
AZURE_COMPUTER_VISION_ENDPOINT=your-azure-cv-endpoint
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_KEY_VAULT_URL=your-key-vault-url

# AWS KMS Configuration (Optional)
AWS_REGION=us-east-1
AWS_KMS_KEY_ID=your-kms-key-id
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Security Configuration
DOCUMENT_ENCRYPTION_KEY=your-document-encryption-key
ENCRYPTION_ALGORITHM=AES-256-GCM
JWT_SECRET=your-jwt-secret-here

# Document Processing
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,jpg,png,jpeg,tiff
UPLOAD_TIMEOUT=300
OCR_TIMEOUT=600

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Database Configuration (Optional)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=document_service
DB_USER=doc_user
DB_PASSWORD=your-db-password

# Jaeger Tracing
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
JAEGER_SERVICE_NAME=document-service

# Monitoring
METRICS_ENABLED=true
PROMETHEUS_PORT=8080
LOG_FORMAT=json

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://portal.austa.com.br

# Feature Flags
ENABLE_OCR=true
ENABLE_VIRUS_SCAN=true
ENABLE_COMPRESSION=true
