# Policy Service Environment Configuration
# ==========================================

# Spring Boot Configuration
ENVIRONMENT=development
SERVICE_NAME=policy-service
SERVER_PORT=3005
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/policy_service
SPRING_DATASOURCE_USERNAME=policy_user
SPRING_DATASOURCE_PASSWORD=your-db-password
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQL11Dialect

# Redis Configuration
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=your-redis-password
SPRING_REDIS_TIMEOUT=60000
SPRING_REDIS_JEDIS_POOL_MAX_ACTIVE=20
SPRING_REDIS_JEDIS_POOL_MAX_IDLE=10

# Security Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=3600000
ENCRYPTION_KEY=your-encryption-key-here
ENCRYPTION_ALGORITHM=AES

# Policy Configuration
POLICY_CACHE_TTL=300
POLICY_UPDATE_TIMEOUT=120
MAX_POLICIES_PER_USER=100

# Actuator Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,metrics,prometheus
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true

# Jaeger Tracing
OPENTELEMETRY_EXPORTER_JAEGER_ENDPOINT=http://jaeger:14250
OPENTELEMETRY_EXPORTER_JAEGER_SERVICE_NAME=policy-service

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://portal.austa.com.br
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Kafka Configuration (Optional)
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092
SPRING_KAFKA_PRODUCER_VALUE_SERIALIZER=org.apache.kafka.common.serialization.StringSerializer
SPRING_KAFKA_CONSUMER_VALUE_DESERIALIZER=org.apache.kafka.common.serialization.StringDeserializer

# Application Configuration
APP_NAME=Policy Service
APP_VERSION=1.0.0
APP_DESCRIPTION=Service for managing user policies and compliance rules

# Feature Flags
FEATURE_FLAG_POLICY_VERSIONING=true
FEATURE_FLAG_POLICY_APPROVAL_WORKFLOW=true
FEATURE_FLAG_AUDIT_LOGGING=true

# Monitoring
SENTRY_DSN=your-sentry-dsn-url
NEWRELIC_LICENSE_KEY=your-newrelic-license-key
DATADOG_API_KEY=your-datadog-api-key
