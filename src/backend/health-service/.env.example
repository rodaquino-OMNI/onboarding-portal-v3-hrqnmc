# Health Service Environment Configuration
# ==========================================

# Service Configuration
ENVIRONMENT=development
SERVICE_NAME=health-service
API_PORT=3003
LOG_LEVEL=INFO
VERSION=1.0.0

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://redis:6379

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=health_service
DB_USER=health_user
DB_PASSWORD=your-db-password
DB_SCHEMA=public
DB_SSL_ENABLED=true
DB_SSL_CA_PATH=/etc/ssl/certs/ca-certificates.crt
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# LLM Configuration (OpenAI/Azure)
LLM_PROVIDER=openai
LLM_API_KEY=your-openai-api-key
LLM_MODEL=gpt-4
AZURE_OPENAI_ENDPOINT=your-azure-endpoint
AZURE_OPENAI_KEY=your-azure-key
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3

# Security Configuration
ENCRYPTION_KEY=your-encryption-key-here
ENCRYPTION_ALGORITHM=AES-256-GCM
KEY_ROTATION_DAYS=30
ALLOWED_ORIGINS=https://*.austa.com.br,http://localhost:3000
JWT_SECRET=your-jwt-secret-here

# Health Assessment Configuration
QUESTIONNAIRE_CACHE_TTL=3600
MAX_QUESTIONS_PER_SESSION=50
RISK_ASSESSMENT_TIMEOUT=300

# CORS Configuration
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE
CORS_ALLOW_HEADERS=*
CORS_MAX_AGE=3600

# Monitoring Configuration
PROMETHEUS_ENABLED=true
STATSD_ENABLED=true
JAEGER_ENDPOINT=http://jaeger:6831

# Azure Key Vault Configuration
AZURE_KEY_VAULT_URL=your-key-vault-url
AZURE_KEY_VAULT_SECRET_NAME=health-service-key

# LGPD Compliance
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=90
CONSENT_REQUIRED=true
ANONYMIZATION_ENABLED=true
